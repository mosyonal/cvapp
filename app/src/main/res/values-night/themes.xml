<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/platinum</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        <item name="android:statusBarColor">@color/color_primary</item>
    </style>

    <style name="Theme.Cocktails" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/thistle</item>
        <item name="colorPrimaryVariant">@color/english_violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/platinum</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        <item name="android:statusBarColor">@color/cocktail_toolbar</item>
    </style>

    <style name="Widget.Dialog" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Widget.BottomSheet" parent="Widget.Dialog">
        <item name="android:windowBackground">@color/transparent_black_40</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

</resources>